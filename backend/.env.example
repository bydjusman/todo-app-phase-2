# Backend environment variables example
# Copy this to `.env` locally (do NOT commit secrets). Set the same variables in Vercel project settings.

# Database connection (example for Postgres)
# Format: postgresql://USER:PASSWORD@HOST/DBNAME?sslmode=require
DATABASE_URL=postgresql://USER:PASSWORD@HOST/DBNAME?sslmode=require

# JWT / secret settings
SECRET_KEY=generate-a-strong-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server settings
HOST=0.0.0.0
PORT=8000

# Dev convenience
RELOAD=0
# Backend Environment Variables
# Copy this file to .env and fill in the values

# Application
APP_NAME=Todo API
ENVIRONMENT=development
DEBUG=true

# Database (Neon PostgreSQL)
# Get your connection string from https://console.neon.tech
DATABASE_HOST=ep-silent-salad-a444mue3-pooler.us-east-1.aws.neon.tech
DATABASE_PORT=5432
DATABASE_NAME=neondb
DATABASE_USER=neondb_owner
DATABASE_PASSWORD=npg_MosLOzD72kiG

# Full Neon connection string (with SSL)
DATABASE_URL=postgresql://neondb_owner:npg_MosLOzD72kiG@ep-silent-salad-a444mue3-pooler.us-east-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require

# JWT Authentication
# Generate a secure secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
